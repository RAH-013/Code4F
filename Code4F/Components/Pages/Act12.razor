@page "/act12"
@rendermode InteractiveServer

<PageTitle>Act12</PageTitle>
<h3>Generar numeros primos</h3>

<div class="input-group mb-3">
    <label class="input-group-text">Numero Limite</label>
    <input class="form-control" type="number" min="2" @bind="num" />
</div>

<button type="button" class="btn btn-primary" @onclick="calcular">Generar</button>

@if(btnNum != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Numeros Primos (Hasta el @btnNum)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>2</td>
            </tr>
            @for (int i = 3; i <= btnNum; i += 2)
            {
                @if (esPrimo(i))
                {
                    <tr>
                        <td>@i</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@code {
    private int num = 0, btnNum = 0;

    private void calcular()
    {
        btnNum = num;
        num = 0;
    }

    private static bool esPrimo (int n)
    {
        for (int i = 3; i <= Math.Sqrt(n); i += 2)
        {
            if (n % i == 0)
            {
                return false;
            }
        }

        return true;
    }
}